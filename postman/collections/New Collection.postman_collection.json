      "name": "login",
      "event": [
        {
          "listen": "test",
          "script": {
            "id": "9329807b-5354-47f2-9c6a-2b0488bbecb9",
            "exec": [
              "pm.test(\"Status code is 2xx for successful login\", function () {",
              "    if (pm.response.code >= 200 && pm.response.code < 300) {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property(\"access_token\");",
              "",
              "    pm.expect(jsonData.message.toLowerCase()).to.include(\"unauthorized\");",
              "    }",
              "})",
              "pm.test(\"Unauthorised returns 401\", function () {",
              "    if (pm.response.code === 401) {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property(\"message\");",
              "",
              "    pm.expect(jsonData.message.toLowerCase()).to.include(\"unauthorized\");",
              "    }",
              "})",
              "pm.test(\"Handle common error codes\", function () {",
              "    pm.expect([200, 201, 400, 401, 403, 404, 500]).to.include(pm.response.code);",
              "})"
            ],
            "type": "text/javascript"
          }
        },
